{
  "kind": "collectionType",
  "collectionName": "patients",
  "info": {
    "name": "patient",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email"
    },
    "gender": {
      "type": "string"
    },
    "birthDate": {
      "type": "date"
    },
    "occupation": {
      "type": "string"
    },
    "address": {
      "type": "text",
      "required": true
    },
    "city": {
      "type": "string"
    },
    "appointments": {
      "collection": "appointment",
      "via": "patient"
    },
    "pincode": {
      "type": "string",
      "required": false
    },
    "bloodGroup": {
      "type": "string"
    },
    "mobile": {
      "type": "string",
      "required": true,
      "regex": "^[789]\\d{9}$"
    },
    "notifications": {
      "collection": "notification",
      "via": "patients"
    }
  }
}
